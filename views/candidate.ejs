<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/candidate.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://kit.fontawesome.com/c2af25f0f5.js" crossorigin="anonymous"></script>
    <script src="/common.js"></script>

    <title>Job Portal</title>
</head>

<body>
    <%- include('header'); -%>

    <div class="wrapper">
        <div class="side-menu candidate">
            <div class="profile-section">
                <div class="profile-image">
                    <img src="images/user-profile pic.png" alt="Profile Pic" id="img-profile-picture"
                        class="img-profile-picture">
                    <input type="file" id="file" class="file">
                    <label for="file" class="uploadBtn" id="uploadBtn">
                        <i class="fa fa-upload"></i>
                    </label>
                </div>
                <div class="user-info">
                    <p class="name"></p>
                    <span class="type"></span>
                </div>
            </div>
            <div class="menu-section">
                <div class="menu-item active">
                    <i class="fa fa-user"></i>
                    <p class="m-0" style="color: #248291;">My Profile</p><span></span>
                </div>
                <div class="menu-item ">
                    <i class="fa fa-search"></i>
                    <a href="/jobs" style="text-decoration: none; color: black;">Jobs</a><span></span>
                    
                </div>
            </div>
        </div>
        <div class="content">
            <div class="card">
                <div class="heading">
                    <h3 class="user-name"></h3>
                    <hr style="margin-top: 2%;"> <br>
                </div>
                <div class="fill-information">
                    <p>Profile Infromation</p><br>
                    <div class="sub-header">
                        <div class="sub-header-content">
                            Career Stage
                        </div>
                        <select class="option-content">
                            <option value="" disabled selected>Select Career Stage</option>
                            <option value="">Student</option>
                            <option value="">Job Starter</option>
                            <option value="">Professional Experienced</option>
                        </select>
                    </div>
                    <div class="sub-header">
                        <div class="sub-header-content">
                            Highest Graduation
                        </div>
                        <select class="option-content">
                            <option value="" disabled selected>Select Highest Graduation</option>
                            <option value="">Post Graduate</option>
                            <option value="">Under Graduate</option>
                            <option value="">Secondary Education</option>
                            <option value="">Higher Secondary Education</option>
                            <option value="">Masters</option>
                            <option value="">Bachelors</option>
                            <option value="">PhD</option>
                        </select>
                    </div>
                    <div class="sub-header">
                        <div class="sub-header-content">
                            Type of Hiring
                        </div>
                        <select class="option-content">
                            <option value="" disabled selected>Select the Type of Hiring</option>
                            <option value="">Full Time</option>
                            <option value="">Part Time</option>
                            <option value="">Internship</option>
                            <option value="">Freelance</option>
                        </select>
                    </div>
                    <div class="sub-header">
                        <div class="sub-header-content">
                            Address
                        </div>
                        <textarea style="min-height: 80px;" type="text" class="textBox" placeholder=" Address"></textarea>
                    </div>
                    <div class="sub-header">
                        <div class="sub-header-content">
                            Phone
                        </div>
                        <input type="number" class="textBox" placeholder=" Phone">
                    </div>
                </div>
            </div>
    
            <div class="card">
                <div class="heading">
                    <h3>Skills</h3>
                    <hr style="margin-top: 2%;"> <br>
                </div>
                <div class="fill-information">
                    <div class="sub-header">
                        <div class="sub-header-content">
                            <i>Here, you list your professional skills</i>
                        </div>
                        <input type="text" class="textBox" placeholder=" Enter ability">
                    </div>
                </div>
            </div>
    
            <div class="card">
                <div class="heading">
                    <h3>Experience</h3>
                    <hr style="margin-top: 2%;"> <br>
                </div>
                <div class="fill-information">
                    <p>Add your work Experience</p> <br>
                    
                    <div class="sub-header">
                        <div class="sub-header-content">
                            Description
                        </div>
                        <textarea style="min-height: 100px;" class="textBox" placeholder=" Enter Description"></textarea>
                    </div>
                </div>
            </div>
    
            <div class="card">
                <div class="heading">
                    <h3>Education</h3>
                    <hr style="margin-top: 2%;"> <br>
                </div>
                <div class="fill-information">
                    <p>Add your Education</p> <br>
                   
                    <div class="sub-header">
                        <div class="sub-header-content">
                            Description
                        </div>
                        <textarea style="min-height: 100px;" class="textBox" placeholder=" Enter Description"></textarea>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="save-button">
                    <input type="submit" value="Save All Details">
                </div>
            </div>
    
    
            
        </div>
    </div>
    
    <%- include('footer'); -%>


    <script>
        //Uploading profile picture
        //Declaring HTML elements
        const imgDiv = document.querySelector('.profile-image')
        const img = document.querySelector('#img-profile-picture')
        const file = document.querySelector('#file')
        const uploadBtn = document.querySelector('#uploadBtn')

        //if user hover on profile picture
        imgDiv.addEventListener('mouseenter', function () {
            console.log(uploadBtn)
            uploadBtn.style.display = "block"
        });

        //if user hover out from profile picture
        imgDiv.addEventListener('mouseleave', function () {
            uploadBtn.style.display = "none"
        });

        //When we choose an image to upload
        file.addEventListener('change', function () {
            const choosedFile = this.files[0];

            if (choosedFile) {
                const reader = new FileReader();
                reader.addEventListener('load', function () {
                    img.setAttribute('src', reader.result)
                });

                reader.readAsDataURL(choosedFile);
            }
        })


        
    </script>
</body>

</html>