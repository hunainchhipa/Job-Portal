<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/candidate.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://kit.fontawesome.com/c2af25f0f5.js" crossorigin="anonymous"></script>
    <script src="/common.js"></script>

    <title>Job Portal</title>
</head>

<body>
    <%- include('header'); -%>

    <div class="wrapper">
        <div class="side-menu candidate">
            <div class="profile-section">
                <div class="profile-image">
                    <img src="images/user-profile pic.png" alt="Profile Pic" id="img-profile-picture"
                        class="img-profile-picture">
                    <input type="file" id="file" class="file">
                    <label for="file" class="uploadBtn" id="uploadBtn">
                        <i class="fa fa-upload"></i>
                    </label>
                </div>
                <div class="user-info">
                    <p class="name"></p>
                    <span class="type"></span>
                </div>
            </div>
            <div class="menu-section">
                <div class="menu-item active">
                    <i class="fa fa-user"></i>
                    <p class="m-0" style="color: #248291;">My Profile</p><span></span>
                </div>
                <div class="menu-item ">
                    <i class="fa fa-search"></i>
                    <a href="/jobs" style="text-decoration: none; color: black;">Search Jobs</a><span></span>
                </div>
                <div class="menu-item ">
                    <i class="fa fa-check"></i>
                    <a href="/applied-jobs" style="text-decoration: none; color: black;">My Applied Jobs</a><span></span>
                </div>
            </div>
        </div>
        <div class="content">
            <form class="form-candidate-details" method="post">
                <div class="card">
                    <div class="heading">
                        <h3 class="user-name"></h3>
                        <hr style="margin-top: 2%;"> <br>
                    </div>
                    <div class="fill-information">
                        <p>Profile Infromation</p><br>
                        <div class="sub-header">
                            <div class="sub-header-content">
                                Career Stage
                            </div>
                            <select name="careerstage" class="option-content">
                                <option value="Select Career Stage" disabled selected>Select Career Stage</option>
                                <option value="Student">Student</option>
                                <option value="Job Starte">Job Starter</option>
                                <option value="Professional Experienced">Professional Experienced</option>
                            </select>
                        </div>
                        <div class="sub-header">
                            <div class="sub-header-content">
                                Highest Graduation
                            </div>
                            <select name="graduation" class="option-content">
                                <option value="Select Highest Graduation" disabled selected>Select Highest Graduation</option>
                                <option value="Post Graduate">Post Graduate</option>
                                <option value="Under Graduate">Under Graduate</option>
                                <option value="Secondary Education">Secondary Education</option>
                                <option value="Higher Secondary Education">Higher Secondary Education</option>
                                <option value="Masters">Masters</option>
                                <option value="Bachelors">Bachelors</option>
                                <option value="PhD">PhD</option>
                            </select>
                        </div>
                        <div class="sub-header">
                            <div class="sub-header-content">
                                Type of Hiring
                            </div>
                            <select name="typeofhiring" class="option-content">
                                <option value="Select the Type of Hiring" disabled selected>Select the Type of Hiring</option>
                                <option value="Full Time">Full Time</option>
                                <option value="Part Time">Part Time</option>
                                <option value="Internship">Internship</option>
                                <option value="Freelance">Freelance</option>
                            </select>
                        </div>
                        <div class="sub-header">
                            <div class="sub-header-content">
                                Address
                            </div>
                            <textarea name="address" style="min-height: 80px;" type="text" class="textBox"
                                placeholder=" Address"></textarea>
                        </div>
                        <div class="sub-header">
                            <div class="sub-header-content">
                                Phone
                            </div>
                            <input name="phone" type="number" class="textBox" placeholder=" Phone">
                        </div>
                    </div>
                </div>
            
                <div class="card">
                    <div class="heading">
                        <h3>Skills</h3>
                        <hr style="margin-top: 2%;"> <br>
                    </div>
                    <div class="fill-information">
                        <div class="sub-header">
                            <div class="sub-header-content">
                                <i>Here, you list your professional skills</i>
                            </div>
                            <input name="skills" type="text" class="textBox" placeholder=" Enter ability">
                        </div>
                    </div>
                </div>
            
                <div class="card">
                    <div class="heading">
                        <h3>Experience</h3>
                        <hr style="margin-top: 2%;"> <br>
                    </div>
                    <div class="fill-information">
                        <p>Add your work Experience</p> <br>
            
                        <div class="sub-header">
                            <div class="sub-header-content">
                                Description
                            </div>
                            <textarea name="experience" style="min-height: 100px;" class="textBox"
                                placeholder=" Enter Description"></textarea>
                        </div>
                    </div>
                </div>
            
                <div class="card">
                    <div class="heading">
                        <h3>Education</h3>
                        <hr style="margin-top: 2%;"> <br>
                    </div>
                    <div class="fill-information">
                        <p>Add your Education</p> <br>
            
                        <div class="sub-header">
                            <div class="sub-header-content">
                                Description
                            </div>
                            <textarea name="education" style="min-height: 100px;" class="textBox"
                                placeholder=" Enter Description"></textarea>
                        </div>
                    </div>
                </div>
            
                <div class="card">
                    <div class="save-button">
                        <input name="saveAll" type="submit" value="Save All Details">
                    </div>
                </div>
            </form>
    
    
            
        </div>
    </div>
    
    <%- include('footer'); -%>


    <script>
        //Uploading profile picture
        //Declaring HTML elements
        const imgDiv = document.querySelector('.profile-image')
        const img = document.querySelector('#img-profile-picture')
        const file = document.querySelector('#file')
        const uploadBtn = document.querySelector('#uploadBtn')

        //if user hover on profile picture
        imgDiv.addEventListener('mouseenter', function () {
            uploadBtn.style.display = "block"
        });

        //if user hover out from profile picture
        imgDiv.addEventListener('mouseleave', function () {
            uploadBtn.style.display = "none"
        });

        //When we choose an image to upload
        file.addEventListener('change', function () {
            const choosedFile = this.files[0];

            if (choosedFile) {
                const reader = new FileReader();
                reader.addEventListener('load', function () {
                    img.setAttribute('src', reader.result)
                });

                reader.readAsDataURL(choosedFile);
            }
        })

        //save Candidate data
        const form = document.querySelector(".form-candidate-details");
        form.addEventListener("submit", CanadidateDetails);

        function CanadidateDetails(event) {
            event.preventDefault();

            let payload = {}
            for (let i = 0; i < form.elements.length; i++) {
                let el = form.elements[i];
                payload[el.name] = el.value
            }

            axios.put('/api/save-profile', payload).then((res) => {
                swal("Profile Updated", "You have successfully updated your profile", "success")
            }).catch((e) => {
                swal("Error", "An unexpected error occured", "error")
            })
        }

        
    </script>
</body>

</html>