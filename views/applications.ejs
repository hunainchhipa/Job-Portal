<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="/recruiter.css">
    <script src="https://kit.fontawesome.com/c2af25f0f5.js" crossorigin="anonymous"></script>
    <script src="/common.js"></script>

    <script>
         window.addEventListener("load", (e) => {
            const getApplications = async () => {
                const id = window.location.pathname.split("/")

                const candidates = await axios({
                    url: `/api/job-applications/${id[id.length - 1]}`,
                    method: "GET"
                })
                return candidates.data
            }

            getApplications().then((res) => {
                const htmlCards = []
                res.forEach((candidate) => {
                    htmlCards.push(`
                        <div class="card">
                            <div class="heading">
                                <div class="title">${candidate.firstname} ${candidate.lastname}</div>
                                <div class="jobs">
                                    <div class="description">
                                        ${candidate.email}
                                    </div>
                                    <div class="description">
                                        ${candidate.address}
                                    </div>
                                    <div class="description">
                                        ${candidate.phone}
                                    </div>
                                    <div class="description">
                                        ${candidate.skills}
                                    </div>
                                    <div class="description">
                                        ${candidate.education}
                                    </div>
                                    <div class="description">
                                        ${candidate.experience}
                                    </div>
                                </div>
                            </div>
                        </div>
                    `)
                })

                document.querySelector(".content .cards").innerHTML = htmlCards.join("")
            })

        })
    </script>

    <title>Job Portal</title>
</head>
<body>
    <%- include('header'); -%>

    <div class="wrapper">
        <div class="side-menu recruiter">
            <div class="profile-section">
                <div class="profile-image">
                    <img src="/images/user-profile pic.png" alt="Profile Pic" id="img-profile-picture"
                        class="img-profile-picture">
                    <input type="file" id="file" class="file">
                    <label for="file" class="uploadBtn" id="uploadBtn">
                        <i class="fa fa-upload"></i>
                    </label>
                </div>
                <div class="user-info">
                    <p class="name"></p>
                    <span class="type"></span>
                </div>
            </div>
            <div class="menu-section">
                <div class="menu-item active">
                    <i class="fa-solid fa-list-check"></i>
                    <p class="m-0">Job Management</p><span></span>
                </div>
            </div>
        </div>

        <div class="content">
            <div class="card">
                <div class="heading">
                    <h3 class="post-job" style="font-weight: lighter;">Applied Candidates</h3>
                </div>
            </div>

            <div class="cards">
                    <!-- posted jobs will be displayed here -->
            </div>
        </div>
    </div>

    <%- include('footer'); -%>

    <script>
        //Declaring HTML elements
        const imgDiv = document.querySelector('.profile-image')
        const img = document.querySelector('#img-profile-picture')
        const file = document.querySelector('#file')
        const uploadBtn = document.querySelector('#uploadBtn')

        //if user hover on profile picture
        imgDiv.addEventListener('mouseenter', function () {
            console.log(uploadBtn)
            uploadBtn.style.display = "block"
        });

        //if user hover out from profile picture
        imgDiv.addEventListener('mouseleave', function () {
            uploadBtn.style.display = "none"
        });

        //When we choose an image to upload
        file.addEventListener('change', function () {
            const choosedFile = this.files[0];

            if (choosedFile) {
                const reader = new FileReader();
                reader.addEventListener('load', function () {
                    img.setAttribute('src', reader.result)
                });

                reader.readAsDataURL(choosedFile);
            }
        })


    </script>
</body>

</html>